class Solution {
    public boolean isPerfectSquare(int num) {
        if(num <2 ) return true;

        long left=1,right=num/2;

        while(left <= right){
            long mid=left+(right-left)/2;
            long sq=mid*mid;

            if(sq == num){
                return true;
            }else if(sq < num){
                left=mid+1;
            }
            else{
                right=mid-1;
            }
        }
        return false;
    }
}



//Alternative (Newton’s Method – Faster, Fancy)
class Solution {
    public boolean isPerfectSquare(int num) {
        long x = num;

        while (x * x > num) {
            x = (x + num / x) / 2;
        }

        return x * x == num;
    }
}
